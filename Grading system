//Prompt the student to enter grade
#include <stdio.h>

int main() {
    int subject1, subject2, subject3, average;
    char grade;

    // Prompt the student to enter grade
    printf("Enter marks for Subject 1: ");
    scanf("%d", &subject1);

    printf("Enter marks for Subject 2: ");
    scanf("%d", &subject2);

    printf("Enter marks for Subject 3: ");
    scanf("%d", &subject3); 


    // Calculate the average marks of studeents
 
    average = (subject1 + subject2 + subject3) / 3;

    // Determine the grade based on the average using if-else conditions
    if (average >= 70) {
        grade = 'A';
    } else if (average >= 60) {
        grade = 'B';
    } else if (average >= 50) {
        grade = 'C';
    } else if (average >= 40) {
        grade = 'D';
    } else {
        grade = 'E';
    }

    // Print the average and the corresponding grade
    printf("Average Marks: %d\n", average);
    printf("Grade: %c\n", grade);

    return 0;
}
